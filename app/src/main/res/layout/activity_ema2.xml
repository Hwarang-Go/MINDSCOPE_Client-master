<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="20dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_ema"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="10dp"
        android:theme="@style/Toolbar"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/toolbar_ema_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="스트레스 측정 테스트"
            android:textSize="20sp" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_constraintTop_toBottomOf="@id/toolbar_ema">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:layout_marginVertical="20dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ema_date_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="test date"
                android:textAlignment="center"
                android:textColor="@color/textColor_default"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ema_number_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="23dp"
                android:text="test number info"
                android:textAlignment="center"
                android:textColor="@color/textColor_blue"
                android:textSize="14sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/ema_question_1"
                        android:textColor="#636363"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/question1_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">

                        <RadioButton
                            android:id="@+id/question1_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전혀 그렇지 않다" />

                        <RadioButton
                            android:id="@+id/question1_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="약간 그렇지 않다" />

                        <RadioButton
                            android:id="@+id/question1_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="보통이다" />

                        <RadioButton
                            android:id="@+id/question1_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="조금 그렇다" />

                        <RadioButton
                            android:id="@+id/question1_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="매우 그렇다" />
                    </RadioGroup>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                card_view:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/ema_question_2"
                        android:textColor="#636363"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/question2_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">

                        <RadioButton
                            android:id="@+id/question2_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전혀 그렇지 않다" />

                        <RadioButton
                            android:id="@+id/question2_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="약간 그렇지 않다" />

                        <RadioButton
                            android:id="@+id/question2_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="보통이다" />

                        <RadioButton
                            android:id="@+id/question2_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="조금 그렇다" />

                        <RadioButton
                            android:id="@+id/question2_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="매우 그렇다" />
                    </RadioGroup>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                card_view:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/ema_question_3"
                        android:textColor="#636363"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/question3_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">

                        <RadioButton
                            android:id="@+id/question3_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전혀 그렇지 않다" />

                        <RadioButton
                            android:id="@+id/question3_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="약간 그렇지 않다" />

                        <RadioButton
                            android:id="@+id/question3_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="보통이다" />

                        <RadioButton
                            android:id="@+id/question3_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="조금 그렇다" />

                        <RadioButton
                            android:id="@+id/question3_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="매우 그렇다" />
                    </RadioGroup>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="10dp"
                card_view:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/ema_question_4"
                        android:textColor="#636363"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/question4_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">

                        <RadioButton
                            android:id="@+id/question4_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전혀 그렇지 않다" />

                        <RadioButton
                            android:id="@+id/question4_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="약간 그렇지 않다" />

                        <RadioButton
                            android:id="@+id/question4_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="보통이다" />

                        <RadioButton
                            android:id="@+id/question4_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="조금 그렇다" />

                        <RadioButton
                            android:id="@+id/question4_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="매우 그렇다" />
                    </RadioGroup>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                card_view:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:lineSpacingExtra="8sp"
                        android:text="@string/ema_question_5"
                        android:textColor="#636363"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/question5_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageButton
                                android:id="@+id/icon_low_empty"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:scaleType="fitCenter"
                                android:padding="0dp"
                                android:background="#00000000"
                                android:src="@drawable/btn_low" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/icon_low_empty"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:textSize="@dimen/my_text_size15"
                                android:fontFamily="@font/notosanscjkkrlight"
                                android:includeFontPadding="false"
                                android:textColor="@color/color_low"
                                android:text="낮음" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/question5_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageButton
                                android:id="@+id/icon_littlehigh_empty"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:scaleType="fitCenter"
                                android:padding="0dp"
                                android:background="#00000000"
                                android:src="@drawable/btn_littlehigh" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/icon_littlehigh_empty"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:textSize="@dimen/my_text_size15"
                                android:fontFamily="@font/notosanscjkkrlight"
                                android:includeFontPadding="false"
                                android:textColor="@color/color_littlehigh"
                                android:text="약간 높음" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/question5_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageButton
                                android:id="@+id/icon_high_empty"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:scaleType="fitCenter"
                                android:padding="0dp"
                                android:background="#00000000"
                                android:src="@drawable/btn_high" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/icon_high_empty"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="10dp"
                                android:textSize="@dimen/my_text_size15"
                                android:fontFamily="@font/notosanscjkkrlight"
                                android:includeFontPadding="false"
                                android:textColor="@color/color_high"
                                android:text="높음" />

                        </RelativeLayout>


                    </LinearLayout>



                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>