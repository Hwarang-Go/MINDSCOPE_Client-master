<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/map_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="@dimen/my_text_size5"
        android:textColor="@color/textColor_blue"
        android:fontFamily="@font/notosanscjkkrmedium"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="10dp"
        android:id="@+id/map_help_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/map_dialog_title"
        android:orientation="horizontal"
        android:layout_marginHorizontal="15dp"
        android:padding="2dp">

        <TextView
            android:id="@+id/map_help_text"
            android:padding="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/map_help_contents"
            android:textAlignment="center"
            android:textSize="@dimen/my_text_size3"
            android:fontFamily="@font/notosanscjkkrregular"
            android:includeFontPadding="false"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/first_map_dialog_btn"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:text="확인"
        app:layout_constraintTop_toBottomOf="@id/map_help_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_white"
        android:stateListAnimator="@null"
        android:fontFamily="@font/notosanscjkkrregular"
        android:includeFontPadding="false"
        android:textSize="@dimen/my_text_size3"
        android:background="@drawable/btn_start_enable"/>

</androidx.constraintlayout.widget.ConstraintLayout>