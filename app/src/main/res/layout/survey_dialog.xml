<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="286dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/survey_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="설명이 유용하지 않았다면\n그 이유는 무엇인가요?"
        android:textAlignment="center"
        android:textSize="@dimen/my_text_size3"
        android:textColor="@color/textColor_default"
        android:fontFamily="@font/notosanscjkkrregular"
        android:includeFontPadding="false"
        />

    <TextView
        android:layout_marginTop="2dp"
        android:id="@+id/survey_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(복수 응답 가능)"
        android:textAlignment="center"
        android:textSize="@dimen/my_text_size1"
        android:textColor="@color/textColor_default"
        android:fontFamily="@font/notosanscjkkrlight"
        android:includeFontPadding="false"
        />

    <CheckBox
        android:layout_marginTop="26dp"
        android:layout_marginHorizontal="20dp"
        android:paddingStart="9dp"
        android:id="@+id/survey_check1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="설명이 분명하지 않음"
        android:textSize="@dimen/my_text_size2"
        android:textColor="@color/textColor_default_light"
        android:fontFamily="@font/notosanscjkkrregular"
        android:includeFontPadding="false"
        />

    <CheckBox
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:paddingStart="9dp"
        android:id="@+id/survey_check2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내 활동을 정확히 분석하지 못함"
        android:textSize="@dimen/my_text_size2"
        android:textColor="@color/textColor_default_light"
        android:fontFamily="@font/notosanscjkkrregular"
        android:includeFontPadding="false"
        />

    <CheckBox
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:paddingStart="9dp"
        android:id="@+id/survey_check3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="분석한 활동이 스트레스와 관련 없음"
        android:textSize="@dimen/my_text_size2"
        android:textColor="@color/textColor_default_light"
        android:fontFamily="@font/notosanscjkkrregular"
        android:includeFontPadding="false"
        />

    <CheckBox
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:paddingStart="9dp"
        android:id="@+id/survey_check4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이미 알고 있는 뻔한 내용임"
        android:textSize="@dimen/my_text_size2"
        android:textColor="@color/textColor_default_light"
        android:fontFamily="@font/notosanscjkkrregular"
        android:includeFontPadding="false"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:layout_marginStart="20dp"
            android:paddingStart="9dp"
            android:id="@+id/survey_check5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기타:"
            android:textSize="@dimen/my_text_size2"
            android:textColor="@color/textColor_default_light"
            android:fontFamily="@font/notosanscjkkrregular"
            android:includeFontPadding="false"
            />

        <EditText
            android:id="@+id/survey_check5_edittext"
            android:layout_marginStart="1dp"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/my_text_size2"
            android:textColor="@color/textColor_default_light"
            android:fontFamily="@font/notosanscjkkrregular"
            android:includeFontPadding="false"/>


    </LinearLayout>

    <TextView
        android:layout_marginTop="18dp"
        android:id="@+id/survey_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="설문에 답해주셔서 감사합니다!\n이 설문은 마인드스코프의 발전에 큰 도움이 됩니다!"
        android:textAlignment="center"
        android:textSize="@dimen/guide_text_size"
        android:textColor="@color/textColor_default"
        android:fontFamily="@font/notosanscjkkrlight"
        android:includeFontPadding="false"
        />

    <Button
        android:layout_marginTop="18dp"
        android:id="@+id/survey_next_btn"
        android:layout_width="115dp"
        android:layout_height="32dp"
        android:text="다음에 하기"
        android:layout_gravity="center"
        android:textColor="@color/textColor_blue"
        android:stateListAnimator="@null"
        android:fontFamily="@font/notosanscjkkrregular"
        android:includeFontPadding="false"
        android:textSize="@dimen/my_text_size2"
        android:background="@drawable/btn_design_blue"/>

    <Button
        android:layout_marginTop="10dp"
        android:layout_marginBottom="21dp"
        android:id="@+id/survey_submit_btn"
        android:layout_width="115dp"
        android:layout_height="32dp"
        android:text="제출하기"
        android:layout_gravity="center"
        android:textColor="@color/color_white"
        android:stateListAnimator="@null"
        android:fontFamily="@font/notosanscjkkrregular"
        android:includeFontPadding="false"
        android:textSize="@dimen/my_text_size2"
        android:background="@drawable/btn_start_enable"/>



</LinearLayout>