<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CareChildFragment2">


    <TextView
        android:id="@+id/child2_txt1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="35dp"
        android:fontFamily="@font/notosanscjkkrregular"
        android:includeFontPadding="false"
        android:textColor="@color/textColor_default"
        android:textSize="@dimen/my_text_size14"
        android:text="@string/string_child2_txt1"/>

    <TextView
        android:id="@+id/child2_txt2"
        app:layout_constraintTop_toBottomOf="@id/child2_txt1"
        android:layout_marginLeft="33dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanscjkkrregular"
        android:includeFontPadding="false"
        android:textColor="@color/textColor_default_light"
        android:textSize="@dimen/guide_text_size"
        android:text="@string/string_child2_txt2"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/intervention_container"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/child2_txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <TextView
            android:id="@+id/child2_intervention"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanscjkkrmedium"
            android:includeFontPadding="false"
            android:textColor="@color/textColor_blue"
            android:textSize="@dimen/my_text_size16"
            android:text="test"/>

        <Button
            android:id="@+id/child2_edit_btn"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginRight="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="변경"
            android:stateListAnimator="@null"
            android:background="@drawable/btn_design"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/child2_make_btn"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/intervention_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/notosanscjkkrregular"
        android:includeFontPadding="false"
        android:textColor="@color/textColor_blue"
        android:textSize="@dimen/my_text_size14"
        android:stateListAnimator="@null"
        android:background="@drawable/btn_design_blue"
        android:text="스트레스 해소방안 만들기"/>

    <TextView
        android:id="@+id/child2_txt3"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/child2_make_btn"
        android:fontFamily="@font/notosanscjkkrlight"
        android:includeFontPadding="false"
        android:textColor="@color/textColor_light"
        android:textSize="@dimen/my_text_size14"
        android:text="test"
        android:visibility="visible"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/child2_recommend_container"
        app:layout_constraintTop_toBottomOf="@id/child2_txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/view_top_border">

        <TextView
            android:id="@+id/child2_txt4"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanscjkkrregular"
            android:includeFontPadding="false"
            android:textColor="@color/textColor_default"
            android:textSize="@dimen/my_text_size14"
            android:text="@string/string_child2_txt4"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/child2_recommend1"
            android:layout_marginTop="3dp"
            android:layout_marginHorizontal="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanscjkkrlight"
            android:includeFontPadding="false"
            android:textColor="@color/textColor_light"
            android:textSize="@dimen/my_text_size14"
            android:text="test"
            app:layout_constraintTop_toBottomOf="@id/child2_txt4"/>

        <TextView
            android:id="@+id/child2_recommend2"
            android:layout_marginTop="3dp"
            android:layout_marginHorizontal="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanscjkkrlight"
            android:includeFontPadding="false"
            android:textColor="@color/textColor_light"
            android:textSize="@dimen/my_text_size14"
            android:text="test"
            app:layout_constraintTop_toBottomOf="@id/child2_recommend1"/>

        <TextView
            android:id="@+id/child2_recommend3"
            android:layout_marginTop="3dp"
            android:layout_marginHorizontal="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanscjkkrlight"
            android:includeFontPadding="false"
            android:textColor="@color/textColor_light"
            android:textSize="@dimen/my_text_size14"
            android:text="test"
            app:layout_constraintTop_toBottomOf="@id/child2_recommend2"/>

        <Button
            android:id="@+id/child2_load_btn"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_refresh_blue_24px"
            android:background="@drawable/btn_design"
            android:gravity="center"
            android:fontFamily="@font/notosanscjkkrregular"
            android:includeFontPadding="false"
            android:textColor="@color/textColor_default_light"
            android:textSize="@dimen/my_text_size14"
            android:text="다른 추천 보기"
            android:stateListAnimator="@null"
            app:layout_constraintTop_toBottomOf="@id/child2_recommend3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/child2_switch_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="20dp"
        android:background="@drawable/view_top_border">

        <TextView
            android:id="@+id/child2_txt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:fontFamily="@font/notosanscjkkrregular"
            android:includeFontPadding="false"
            android:textColor="@color/textColor_default"
            android:textSize="@dimen/my_text_size14"
            android:layout_marginStart="30dp"
            android:text="@string/string_child2_txt5"/>

        <Switch
            android:id="@+id/child2_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.constraintlayout.widget.ConstraintLayout>