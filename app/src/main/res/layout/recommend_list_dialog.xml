<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="309dp"
    android:layout_height="497dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/intervention_list_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="스트레스 해소방법 추천리스트"
        android:textAlignment="center"
        android:textSize="@dimen/my_text_size5"
        android:fontFamily="@font/notosanscjkkrmedium"
        android:includeFontPadding="false"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:scrollbars="vertical"
        android:id="@+id/intervention_list_view"
        />

    <Button
        android:layout_marginVertical="12dp"
        android:id="@+id/intervention_list_btn"
        android:layout_width="115dp"
        android:layout_height="32dp"
        android:text="확인"
        android:layout_gravity="center"
        android:textColor="@color/color_white"
        android:stateListAnimator="@null"
        android:fontFamily="@font/notosanscjkkrregular"
        android:includeFontPadding="false"
        android:textSize="@dimen/my_text_size2"
        android:background="@drawable/btn_start_enable"/>

</LinearLayout>