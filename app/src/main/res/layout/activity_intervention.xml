<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InterventionSaveActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_intervention_save"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="10dp"
        android:theme="@style/Toolbar"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/toolbar_intervention_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="스트레스 해소 방법"
            android:textSize="20sp" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/container_current_place_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar_intervention_save"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="28dp"
            android:layout_marginLeft="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanscjkkrlight"
            android:includeFontPadding="false"
            android:textSize="@dimen/my_text_size16"
            android:textColor="@color/textColor_default"
            android:text="@string/string_intervention_txt"/>

        <EditText
            android:id="@+id/input_intervention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanscjkkrregular"
            android:includeFontPadding="false"
            android:textSize="@dimen/my_text_size16"
            android:textColorHint="@color/hintColor"
            android:layout_marginHorizontal="35dp"
            android:hint="#산책5분하기"/>

        <TextView
            android:id="@+id/child2_txt2"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanscjkkrregular"
            android:includeFontPadding="false"
            android:textColor="@color/textColor_default_light"
            android:textSize="@dimen/guide_text_size"
            android:text="@string/string_child2_txt2"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>